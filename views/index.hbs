    <body>
        <picture class="home-coin">
            <source srcset="/images/BitcoinLarge.png" media="(min-width: 901px)">
            <source srcset="/images/Bitcoin.png" media="(min-width: 601px)">
            <img src="/images/BitcoinSmall.png" alt="Crytpo Image">
        </picture>
        <h1 style="color:white; text-align:center; margin-top:35px;">Wallet Whimsy</h1>
        <h4 style="color:goldenrod; text-align:center; margin: top 20px;">Where your crypto grows and your worries go!</h4>

        {{!-- left hand side --}}
        <div class="container mt-5" style="height: 450px;">
        <div class="row justify-content-center  h-100">
        <div class="col-auto d-flex flex-column h-100">
            <a href="/account" class="btn btn-lg btn-light" role="button">Login or Create Account</a>
            <div class="my-auto">
                <img src="/images/Graph.png" alt="Graph imahe to fill up blank space" class="img-fluid" style="max-width: 300px; height:auto;">
            </div>
            <a href="/aboutus" class="btn btn-lg btn-light" role="button">About Us</a>
        </div>

        {{!-- right hand side --}}
        <div class="col-auto">
        <div class="card" style="background-color: #C0C0C0; width: 350px;">
            <div class="card-header text-center">Hot Right Now.</div>
            <div class="card-body">
            <div id="carouselExampleControls"
                class="carousel slide"
                data-bs-ride="carousel"
                data-bs-interval="5000">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/WhimsyCash.png" class="d-block w-100" alt="WhimsyCash Logo">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/GitPushPay.png" class="d-block w-100" alt="GitPushPay Logo">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/BinaryBling.png" class="d-block w-100" alt="BinaryBling Logo">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                    <span class="visually-hidden">Next</span>
                    </button>
                </div>
                </div>
                <div class="card-footer text-muted d-flex justify-content-center">
                    <a href="/shop" class="btn btn-light" role="button">Start Trading</a>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- div to create some empty space for bottom --}}
<div style="padding-bottom: 100px;"></div>


        <script src= "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script>
		setInterval(function () {
			let carousel = document.querySelector('#carouselExampleControls');
			let carouselInstance = bootstrap.Carousel.getInstance(carousel);
			carouselInstance.next();
		}, 5000);
	</script>
