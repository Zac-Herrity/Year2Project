{{!-- meta tags --}}
<meta name="description" content="Login or create your account today!">
<title>Wallet Whimsy - Account</title>
<h1 style="color:white; text-align:center; margin-top:35px;">Account Page</h1>
<h4 style="color:goldenrod; text-align:center; margin: top 20px;">Login or Create an Account Now!</h4>

<div class="container" id="loginForm">
<form>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput">Name</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Enter your name">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
  </div>
  <div style="margin-bottom: 10px;">
  <button type="submit" class="btn-light btn">Login</button>
  <a href="/createAccount" style="margin-left: 20px;" class="btn btn-light {{#if state.home}}active{{/if}}" role="button">Or Create Account!</a>
  </div>
</form>
</div>
<script src="/account.js"></script>